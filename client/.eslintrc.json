{
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      "off"
    ],
    "react/jsx-no-bind": [
      "off"
    ],
    "react/prefer-stateless-function": [
      "off"
    ],
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }],
    "jsx-a11y/label-has-for": ["error", {
      "components": ["label"],
      "required": {
        "some": [ "nesting", "id" ]
      }
    }]
  }
}
